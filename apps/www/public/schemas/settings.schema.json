{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://locusai.dev/schemas/settings.schema.json",
  "title": "Locus Settings",
  "description": "User settings for a Locus AI project (.locus/settings.json)",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference for editor validation and autocomplete"
    },
    "apiKey": {
      "type": "string",
      "description": "Locus API key for authentication",
      "pattern": "^lk_[a-f0-9]+$"
    },
    "apiUrl": {
      "type": "string",
      "format": "uri",
      "description": "Locus API base URL (defaults to https://api.locusai.dev/api)",
      "examples": ["https://api.locusai.dev/api", "http://localhost:8000/api"]
    },
    "provider": {
      "type": "string",
      "description": "AI provider to use for agent execution",
      "enum": ["claude", "codex"]
    },
    "model": {
      "type": "string",
      "description": "AI model to use for agent execution. Valid values depend on the provider.",
      "enum": [
        "opus",
        "sonnet",
        "haiku",
        "opusplan",
        "claude-opus-4-6",
        "claude-opus-4-5-20251101",
        "claude-sonnet-4-5-20250929",
        "claude-sonnet-4-6",
        "claude-haiku-4-5-20251001",
        "gpt-5.3-codex",
        "gpt-5.3-codex-spark",
        "gpt-5.2-codex",
        "gpt-5.1-codex-max",
        "gpt-5.1-codex",
        "gpt-5.1-codex-mini",
        "gpt-5-codex",
        "codex-mini-latest"
      ]
    },
    "workspaceId": {
      "type": "string",
      "format": "uuid",
      "description": "The Locus workspace ID (overrides the value in config.json)"
    },
    "telegram": {
      "type": "object",
      "description": "Telegram bot integration settings",
      "properties": {
        "botToken": {
          "type": "string",
          "description": "Telegram bot token from @BotFather"
        },
        "chatId": {
          "type": "number",
          "description": "Telegram chat ID where the bot will send notifications"
        },
        "testMode": {
          "type": "boolean",
          "description": "Enable test mode (dry run without executing tasks)",
          "default": false
        }
      },
      "additionalProperties": false
    }
  },
  "allOf": [
    {
      "if": { "properties": { "provider": { "const": "claude" } } },
      "then": {
        "properties": {
          "model": {
            "enum": [
              "opus",
              "sonnet",
              "haiku",
              "opusplan",
              "claude-opus-4-6",
              "claude-opus-4-5-20251101",
              "claude-sonnet-4-5-20250929",
              "claude-sonnet-4-6",
              "claude-haiku-4-5-20251001"
            ]
          }
        }
      }
    },
    {
      "if": { "properties": { "provider": { "const": "codex" } } },
      "then": {
        "properties": {
          "model": {
            "enum": [
              "gpt-5.3-codex",
              "gpt-5.3-codex-spark",
              "gpt-5.2-codex",
              "gpt-5.1-codex-max",
              "gpt-5.1-codex",
              "gpt-5.1-codex-mini",
              "gpt-5-codex",
              "codex-mini-latest"
            ]
          }
        }
      }
    }
  ],
  "additionalProperties": false
}
