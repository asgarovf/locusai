{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://locusai.dev/schemas/settings.schema.json",
  "title": "Locus Settings",
  "description": "Project settings for Locus CLI (.locus/settings.json)",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference for editor validation and autocomplete"
    },
    "provider": {
      "type": "string",
      "description": "AI provider to use for agent execution",
      "enum": ["claude", "codex"]
    },
    "model": {
      "type": "string",
      "description": "AI model to use for agent execution. Valid values depend on the provider.",
      "enum": [
        "opus",
        "sonnet",
        "haiku",
        "opusplan",
        "claude-opus-4-6",
        "claude-opus-4-5-20251101",
        "claude-sonnet-4-5-20250929",
        "claude-sonnet-4-6",
        "claude-haiku-4-5-20251001",
        "gpt-5.3-codex",
        "gpt-5.3-codex-spark",
        "gpt-5.2-codex",
        "gpt-5.1-codex-max",
        "gpt-5.1-codex",
        "gpt-5.1-codex-mini",
        "gpt-5-codex",
        "codex-mini-latest"
      ]
    }
  },
  "allOf": [
    {
      "if": { "properties": { "provider": { "const": "claude" } } },
      "then": {
        "properties": {
          "model": {
            "enum": [
              "opus",
              "sonnet",
              "haiku",
              "opusplan",
              "claude-opus-4-6",
              "claude-opus-4-5-20251101",
              "claude-sonnet-4-5-20250929",
              "claude-sonnet-4-6",
              "claude-haiku-4-5-20251001"
            ]
          }
        }
      }
    },
    {
      "if": { "properties": { "provider": { "const": "codex" } } },
      "then": {
        "properties": {
          "model": {
            "enum": [
              "gpt-5.3-codex",
              "gpt-5.3-codex-spark",
              "gpt-5.2-codex",
              "gpt-5.1-codex-max",
              "gpt-5.1-codex",
              "gpt-5.1-codex-mini",
              "gpt-5-codex",
              "codex-mini-latest"
            ]
          }
        }
      }
    }
  ],
  "additionalProperties": false
}
