{
  "name": "locus",
  "version": "0.1.0",
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@changesets/cli": "^2.29.8",
    "@types/bun": "^1.3.6",
    "typescript": "5.8.3"
  },
  "scripts": {
    "dev": "./scripts/dev.sh",
    "workspace:init": "bun run scripts/workspace-init.ts",
    "create-project": "bun run packages/cli/index.ts",
    "seed": "bun run scripts/seed.ts",
    "server": "bun run apps/server/src/index.ts",
    "mcp": "bun run --cwd apps/mcp src/index.ts",
    "lint": "biome lint .",
    "format": "biome check --write --formatter-enabled=true --assist-enabled=true ",
    "typecheck": "tsc -b --noEmit",
    "build:server": "bun build apps/server/src/index.ts --target bun --outfile packages/cli/bin/server.js",
    "build:mcp": "bun build apps/mcp/src/index.ts --target bun --outfile packages/cli/bin/mcp.js",
    "build:web": "cd apps/web && bun run build && mkdir -p ../../packages/cli/public/dashboard && cp -r out/* ../../packages/cli/public/dashboard/",
    "build:cli": "bun run build:web && bun run build:server && bun run build:mcp && bun build packages/cli/index.ts --target bun --outfile packages/cli/bin/locus.js",
    "version": "changeset version",
    "release": "bun run build:cli && changeset publish"
  },
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
