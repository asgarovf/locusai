{
  "name": "locus",
  "version": "0.1.0",
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@changesets/cli": "^2.29.8",
    "@jest/core": "29.7.0",
    "@jest/test-sequencer": "29.7.0",
    "@swc/core": "^1.15.10",
    "@swc/jest": "^0.2.39",
    "@types/bun": "^1.3.6",
    "@types/jest": "29.0.0",
    "@types/pg": "^8.16.0",
    "jest": "29.7.0",
    "jest-cli": "29.7.0",
    "jest-config": "29.7.0",
    "ts-jest": "29.1.2",
    "turbo": "^2.7.5",
    "typescript": "5.8.3"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "workspace:init": "bun run scripts/workspace-init.ts",
    "create-project": "bun run packages/cli/index.ts",
    "seed": "bun run scripts/seed.ts",
    "mcp": "bun run --cwd apps/mcp src/index.ts",
    "format": "biome check --write --formatter-enabled=true --assist-enabled=true ",
    "build:mcp": "bun build apps/mcp/src/index.ts --target bun --outfile packages/cli/bin/mcp.js",
    "build:web": "cd apps/web && bun run build && mkdir -p ../../packages/cli/public/dashboard && cp -r out/* ../../packages/cli/public/dashboard/",
    "build:cli": "bun run build:web && bun run build:mcp && bun build packages/cli/index.ts --target bun --outfile packages/cli/bin/locus.js",
    "version": "changeset version",
    "release": "bun run build:cli && changeset publish"
  },
  "type": "module",
  "packageManager": "bun@1.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@nestjs/config": "^4.0.2",
    "pg": "^8.17.1"
  },
  "trustedDependencies": [
    "@nestjs/core",
    "@swc/core",
    "unrs-resolver"
  ]
}
