{
  "name": "@locusai/sdk",
  "version": "0.4.16",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "development": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./node": {
      "types": "./src/index-node.ts",
      "development": "./src/index-node.ts",
      "import": "./src/index-node.ts",
      "default": "./src/index-node.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts ./src/index-node.ts ./src/agent/worker.ts --outdir ./dist --target node --format cjs --external axios --external events --external globby --external @locusai/shared && tsc -p tsconfig.build.json --emitDeclarationOnly",
    "dev": "tsc --watch",
    "lint": "biome lint .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@locusai/shared": "^0.4.16",
    "axios": "^1.13.2",
    "events": "^3.3.0",
    "globby": "^14.0.2"
  },
  "devDependencies": {
    "typescript": "5.8.3",
    "@types/node": "^22.10.7"
  }
}
