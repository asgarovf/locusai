{
  "name": "@locusai/vscode",
  "displayName": "Locus AI",
  "description": "AI-powered coding assistant for VS Code â€” interact with Claude/Codex agents directly from your editor",
  "version": "0.9.18",
  "publisher": "locusai",
  "license": "MIT",
  "type": "module",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Chat",
    "Programming Languages"
  ],
  "keywords": [
    "locus",
    "ai",
    "claude",
    "codex",
    "agent",
    "chat",
    "coding-assistant"
  ],
  "activationEvents": [
    "workspaceContains:.locus"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "locus.setup",
        "title": "Locus: Setup Project"
      },
      {
        "command": "locus.newSession",
        "title": "Locus: New Chat Session"
      },
      {
        "command": "locus.resetContext",
        "title": "Locus: Reset Chat Context"
      },
      {
        "command": "locus.abort",
        "title": "Locus: Stop Agent"
      },
      {
        "command": "locus.refreshTasks",
        "title": "Locus: Refresh Tasks",
        "icon": "$(refresh)"
      },
      {
        "command": "locus.viewTask",
        "title": "Locus: View Task Details"
      },
      {
        "command": "locus.startTask",
        "title": "Locus: Start Task with Agent",
        "icon": "$(play)"
      },
      {
        "command": "locus.selectProvider",
        "title": "Locus: Select AI Provider"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "locus-sidebar",
          "title": "Locus AI",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "locus-sidebar": [
        {
          "type": "webview",
          "id": "locus.chatView",
          "name": "Chat"
        },
        {
          "id": "locus.taskView",
          "name": "Tasks"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "locus.refreshTasks",
          "when": "view == locus.taskView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "locus.startTask",
          "when": "view == locus.taskView && viewItem == task",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Locus AI",
      "properties": {
        "locus.provider": {
          "type": "string",
          "default": "claude",
          "enum": [
            "claude",
            "codex"
          ],
          "description": "AI provider to use for agent execution"
        },
        "locus.model": {
          "type": "string",
          "default": "",
          "description": "Override the default model (leave empty for provider default)"
        }
      }
    },
    "keybindings": [
      {
        "command": "locus.abort",
        "key": "ctrl+shift+escape",
        "mac": "cmd+shift+escape",
        "when": "locus.chatView.visible"
      }
    ]
  },
  "scripts": {
    "build": "node esbuild.config.mjs",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "test": "bun test",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0"
  },
  "dependencies": {}
}
