{
  "name": "@locusai/cli",
  "version": "0.13.2",
  "description": "CLI for Locus - AI-native project management platform",
  "type": "module",
  "bin": {
    "locus": "./bin/locus.js"
  },
  "scripts": {
    "start": "bun lint .",
    "build": "bun build ./index.ts --target=node --outfile=./bin/locus.js && bun build ../sdk/src/agent/worker.ts --target=node --outfile=./bin/agent/worker.js",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "test:local": "bun run build && node ./bin/locus.js",
    "clean": "rm -rf node_modules"
  },
  "files": [
    "bin",
    "package.json",
    "README.md"
  ],
  "keywords": [
    "locus",
    "project-management",
    "ai-agents",
    "cli",
    "engineering-teams",
    "agent",
    "agentic"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@locusai/sdk": "^0.13.2"
  },
  "devDependencies": {}
}
