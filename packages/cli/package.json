{
  "name": "@locusai/cli",
  "version": "0.3.0",
  "description": "Local-first AI development platform & engineering workspace",
  "type": "module",
  "bin": {
    "locus": "./bin/locus.js"
  },
  "scripts": {
    "start": "bun lint .",
    "build": "bun build ./index.ts --target=node --outfile=./bin/locus.js",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "test:local": "bun run build && node ./bin/locus.js",
    "pack:test": "npm pack && tar -xzf locusai-cli-*.tgz && cd package && npm link"
  },
  "files": [
    "bin",
    "package.json",
    "README.md"
  ],
  "keywords": [
    "locus",
    "project-management",
    "monorepo",
    "cli",
    "scaffold",
    "agent",
    "agentic"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@locusai/sdk": "workspace:*"
  }
}
