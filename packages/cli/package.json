{
  "name": "@locusai/cli",
  "version": "0.17.9",
  "description": "GitHub-native AI engineering assistant",
  "type": "module",
  "bin": {
    "locus": "./bin/locus.js"
  },
  "scripts": {
    "build": "bun build src/cli.ts --outfile bin/locus.js --target node",
    "dev": "bun run src/cli.ts",
    "test": "bun test",
    "test:unit": "bun test src/core/__tests__ src/repl/__tests__ src/display/__tests__ src/ai/__tests__",
    "test:integration": "bun test src/commands/__tests__",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "format": "biome format --write ."
  },
  "files": [
    "bin",
    "package.json",
    "README.md"
  ],
  "keywords": [
    "locus",
    "github",
    "ai",
    "engineering",
    "cli",
    "sprint",
    "agent"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18"
  }
}
