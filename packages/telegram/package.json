{
  "name": "@locusai/telegram",
  "version": "0.9.2",
  "description": "Telegram bot for Locus - remote control your AI agents from Telegram",
  "type": "module",
  "bin": {
    "locus-telegram": "./bin/telegram.js"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "build": "bun build ./src/index.ts --target=node --outfile=./bin/telegram.js",
    "dev": "bun run --watch src/index.ts",
    "lint": "biome lint .",
    "typecheck": "tsc --noEmit",
    "test:local": "bun run build && node ./bin/telegram.js",
    "pack:test": "npm pack && tar -xzf locusai-telegram-*.tgz && cd package && npm link",
    "clean": "rm -rf node_modules",
    "prepublishOnly": "bun run build"
  },
  "files": [
    "bin",
    "package.json",
    "README.md"
  ],
  "keywords": [
    "locus",
    "telegram",
    "bot",
    "ai-agents",
    "remote-control"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@locusai/sdk": "^0.9.2",
    "dotenv": "^16.4.7",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "@types/node": "^22.10.7"
  }
}
